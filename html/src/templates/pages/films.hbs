<section class="section-padding-top">
    <div class="films-detail-page">
        <div class="container-fluid">
            <div class="section-title text-center">
                <span
                    class="decorator-title decorator-font text-primary text-uppercase text-decoration-underline">Signature Films</span>
                <h5 class="mt-2 title">A glimpse of cinematic storytelling, beautifully shot and edited.</h5>
            </div>
            <div class="row flex-row-reverse">
                <div class="col-xxl-3 col-xl-4 col-lg-5">

                    <div class="bg-gray-800 rounded overflow-hidden">
                        <div
                            class="p-3 mb-3 border-bottom d-flex align-items-center justify-content-between gap-1">
                            <h5 class="m-0">Maravel Films</h5>
                        </div>

                        <div class="px-0 pt-0 pb-3">
                            <div class="films-data">
                                <ul class="nav nav-pills d-flex align-items-center justify-content-center column-gap-3 row-gap-2 flex-wrap"
                                    role="tablist">
                                    <li class="films-data-card active nav-link rounded" data-bs-toggle="pill"
                                        href="#mariage-video">
                                        <div class="films-data-card-image">
                                            <a href="#">
                                                <img src="{{path}}assets/images/img-2.jpeg" alt="Marriage"
                                                    class="img-fluid object-cover w-100 border-0">
                                            </a>
                                        </div>
                                        <div class="films-data-card-content">
                                            <h6 class="mt-0 mb-2 line-count-2 films-data-title">
                                                <a href="#">Marriage Diary</a>
                                            </h6>

                                        </div>
                                    </li>
                                    <li class="films-data-card nav-link rounded" data-bs-toggle="pill" href="#preWedding-video">
                                        <div class="films-data-card-image">
                                            <a href="#">
                                                <img src="{{path}}assets/images/img-3.jpeg" alt="preWedding"
                                                    class="img-fluid object-cover w-100 border-0">
                                            </a>
                                        </div>
                                        <div class="films-data-card-content">
                                            <h6 class="mt-0 mb-2 line-count-2 films-data-title">
                                                <a href="#">Pre Wedding</a>
                                            </h6>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-9 col-xl-8 col-lg-7 mt-lg-0 mt-4">
                    <!-- Tab panes -->
                    <div class="tab-content mt-5">
                        <div id="mariage-video" class="container tab-pane active">
                            <div class="films-main-banner position-relative mb-3">
                                <div class="video-container"></div>
                                <iframe
                                    src="https://www.youtube.com/embed/EIbu9qQw7TM?autoplay=1&mute=1&loop=1&playlist=EIbu9qQw7TM"
                                    title="YouTube video player" frameborder="0" height="400" width="100%"
                                    allow="autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                    referrerpolicy="strict-origin-when-cross-origin" allowfullscreen>
                                </iframe>
                            </div>
                            <div
                                class="trending-info d-flex justify-content-between align-items-center gap-4">
                                <a href="#">
                                    <h4 class="my-2 fw-bold">Marriage</h4>
                                </a>
                            </div>
                        </div>
                        <div id="preWedding-video" class="container tab-pane fade">
                            <div class="playlist-main-banner position-relative mb-3">
                                <div class="video-container"></div>
                                <iframe width="100%" height="400" src="https://www.youtube.com/embed/wzW-3I76PW4?si=4K8LYHex_04dX6l8" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                            </div>
                            <div id="streamit_player_container"
                                class="trending-info d-flex justify-content-between align-items-center gap-4">
                                <a href="#">
                                    <h4 class="my-2 fw-bold">Pre Wedding</h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center mt-5">
                <a href="https://www.youtube.com/c/marvelcreationin" class="btn btn-secondary" target="_blank">View All</a>
            </div>
        </div>
    </div>
</section>
